@model InnerSys.Views.ViewModels.EditViewModel
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="row">
        <div class="form-group">
            <label class="col-sm-2 control-label">ID</label>

            @Html.EditorFor(m => m.Id, new { htmlAttributes = new { @class = "form-control col-sm-10", @readonly = "readonly" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label class="col-sm-2 control-label">帳號</label>
            @Html.EditorFor(m => m.Account, new { htmlAttributes = new { @class = "form-control col-sm-10", @readonly = "readonly" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label class="col-sm-2 control-label">密碼</label>
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control col-sm-10", @autocomplete = "off" , required = "required" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group">
            <label class="col-sm-2 control-label">權限</label>  @Html.DropDownList("CheckPre", (SelectList)ViewData["CheckPreList"], "", new { @id = "CheckPre", @class = "form-control col-sm-10" , required = "required" })
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="form-group">
            <input type="submit" value="儲存" class="btn btn-primary" />
            @Html.ActionLink("取消", "Index", new { Id = Model.Id }, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
}